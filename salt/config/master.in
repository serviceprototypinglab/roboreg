user: $USER
module_dirs:
 - $PWD/salt/modules
runner_dirs:
 - $PWD/salt/runners

interface: 127.0.0.1

#rest_wsgi:
#  port: 8001

rest_cherrypy:
  port: 8001
  host: 127.0.0.1
  disable_ssl: true

external_auth:
  auto:
    roboreg:
      - .*

#external_auth:
#  sharedsecret:
